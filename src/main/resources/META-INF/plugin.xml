<idea-plugin>

    <id>ch.repolevedavaj.projectenv.intellijplugin</id>
    <name>Project-Env</name>
    <vendor>repolevedavaj</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensionPoints>
        <extensionPoint name="toolConfigurer"
                        interface="ch.repolevedavaj.projectenv.intellijplugin.configurers.ToolConfigurer"
                        dynamic="true"
                        area="IDEA_PROJECT"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <projectService
                serviceInterface="ch.repolevedavaj.projectenv.intellijplugin.services.ExecutionEnvironmentService"
                serviceImplementation="ch.repolevedavaj.projectenv.intellijplugin.services.impl.ExecutionEnvironmentServiceImpl"/>
    </extensions>

    <applicationListeners>
        <listener class="ch.repolevedavaj.projectenv.intellijplugin.ProjectEnvInitializer"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <depends optional="true" config-file="plugin-jdk.xml">com.intellij.java</depends>
    <depends optional="true" config-file="plugin-maven.xml">org.jetbrains.idea.maven</depends>
    <depends optional="true" config-file="plugin-gradle.xml">com.intellij.gradle</depends>
    <depends optional="true" config-file="plugin-node.xml">NodeJS</depends>

</idea-plugin>
